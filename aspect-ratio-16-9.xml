<!-- 
16:9 aspect ratio
based on 1920x1080
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <text name="user-name">
         <pos>0.03125 0.05555556</pos><!-- 60 60 -->
      </text>
      <clock name="clock">
         <pos>0.5 0.05555556</pos><!-- 60 60 -->
      </clock>
      <systemstatus name="system-status">
         <pos>0.96875 0.05555556</pos><!-- 1860 60 -->
      </systemstatus>
      <text name="view-name">
         <pos>0.03125 0.94444444</pos><!-- 60 1020 -->
      </text>
      <helpsystem name="help-system-view,help-gamelist-view">
         <pos>${helpsystemPos}</pos>
         <iconTextSpacing>${helpSystemIconTextSpacing}</iconTextSpacing>
         <entrySpacing>${helpSystemEntrySpacing}</entrySpacing>
      </helpsystem>
   </view>
   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <helpsystem name="help-system-view">
         <entries>${helpSystemViewEntries}</entries>
      </helpsystem>
      <helpsystem name="help-gamelist-view">
         <scope>none</scope>
      </helpsystem>
      <textlist name="system-textlist">
         <pos>0.5 0.5</pos>
         <selectedBackgroundMargins>${selectedBackgroundMargins}</selectedBackgroundMargins>
         <size>0.65 0.65</size><!-- 1248 702 -->
      </textlist>
   </view>
   <!--
   ///
   Gamelist View
   ///
   -->
   <view name="gamelist">
      <helpsystem name="help-system-view">
         <scope>none</scope>
      </helpsystem>
      <helpsystem name="help-gamelist-view">
         <entries>${helpGamelistViewEntries}</entries>
      </helpsystem>
      <textlist name="gamelist-textlist">
         <selectedBackgroundMargins>${selectedBackgroundMargins}</selectedBackgroundMargins>
      </textlist>
   </view>
   <variant name="gamelist-list-basic">
      <view name="gamelist">
         <textlist name="gamelist-textlist">
            <pos>0.5 0.5</pos><!-- 50% 50% -->
            <size>0.65 0.65</size><!-- 1248 702 -->
         </textlist>
      </view>
   </variant>
   <variant name="gamelist-list-cover,gamelist-list-screenshot,gamelist-list-titlescreen,gamelist-list-physicalmedia,gamelist-list-miximage">
      <view name="gamelist">
         <textlist name="gamelist-textlist">
            <pos>0.125 0.5</pos><!-- 240 50% -->
            <size>0.325 0.65</size><!-- 624 702 -->
         </textlist>
         <video name="game-artwork">
            <pos>0.875 0.5</pos><!-- 1680 50% -->
            <maxSize>0.325 0.65</maxSize><!-- 624 702 -->
         </video>
      </view>
   </variant>
   <variant name="gamelist-carousel-cover">
      <view name="gamelist">
         <text name="game-name">
            <pos>0.13020833 0.27037037</pos><!-- 250 292 -->
            <size>0.73958333 0.06481481</size><!-- 1420 70 -->
         </text>
         <carousel name="gamelist-carousel">
            <verticalOffset>0.32222222</verticalOffset><!-- 348 -->
            <!-- Carousel sizing handled in _inc/systems/coversize -->
         </carousel>
         <video name="game-video">
            <origin>0 0</origin>
            <imageType>none</imageType>
            <delay>2</delay>
            <fadeInType>black</fadeInType>
            <videoCornerRadius>0.0025</videoCornerRadius>
            <iterationCount>1</iterationCount>
            <onIterationsDone>none</onIterationsDone>
            <zIndex>15</zIndex>
         </video>
         <image name="carousel-selector">
            <origin>0 0</origin>
            <color>${selectorColor}</color>
            <cornerRadius>0.0025</cornerRadius>
            <metadataElement>true</metadataElement>
            <zIndex>20</zIndex>
         </image>
      </view>
   </variant>
   <!--
   ///
   Font Sizes
   ///
   -->
   <fontSize name="small">
      <variables>
         <selectedBackgroundMargins>0.01458333 0.01458333</selectedBackgroundMargins><!-- 28 -->
         <helpSystemViewEntries>start,a</helpSystemViewEntries>
         <helpGamelistViewEntries>back,a,b</helpGamelistViewEntries>
         <helpsystemPos>0.96875 0.95185185</helpsystemPos><!-- 1860 1028 -->
         <helpSystemIconTextSpacing>0.00416667</helpSystemIconTextSpacing><!-- 8 -->
         <helpSystemEntrySpacing>0.0125</helpSystemEntrySpacing><!-- 24 -->
      </variables>
   </fontSize>
   <fontSize name="medium">
      <variables>
         <selectedBackgroundMargins>0.025 0.025</selectedBackgroundMargins><!-- 48 -->
         <helpSystemViewEntries>start,a</helpSystemViewEntries>
         <helpGamelistViewEntries>back,a,b</helpGamelistViewEntries>
         <helpsystemPos>0.96875 0.95185185</helpsystemPos><!-- 1860 1028 -->
         <helpSystemIconTextSpacing>0.00416667</helpSystemIconTextSpacing><!-- 8 -->
         <helpSystemEntrySpacing>0.0125</helpSystemEntrySpacing><!-- 24 -->
      </variables>
   </fontSize>
   <fontSize name="large">
      <variables>
         <selectedBackgroundMargins>0.025 0.025</selectedBackgroundMargins><!-- 48 -->
         <helpSystemViewEntries>start,a</helpSystemViewEntries>
         <helpGamelistViewEntries>a,b</helpGamelistViewEntries>
         <helpsystemPos>0.96875 0.94444444</helpsystemPos><!-- 1860 1020 -->
         <helpSystemIconTextSpacing>0.00625</helpSystemIconTextSpacing><!-- 12 -->
         <helpSystemEntrySpacing>0.01458333</helpSystemEntrySpacing><!-- 28 -->
      </variables>
   </fontSize>
   <fontSize name="x-large">
      <variables>
         <selectedBackgroundMargins>0.025 0.025</selectedBackgroundMargins><!-- 48 -->
         <helpSystemViewEntries>start,a</helpSystemViewEntries>
         <helpGamelistViewEntries>a,b</helpGamelistViewEntries>
         <helpsystemPos>0.96875 0.94444444</helpsystemPos><!-- 1860 1020 -->
         <helpSystemIconTextSpacing>0.00625</helpSystemIconTextSpacing><!-- 12 -->
         <helpSystemEntrySpacing>0.01458333</helpSystemEntrySpacing><!-- 28 -->
      </variables>
   </fontSize>

</theme>