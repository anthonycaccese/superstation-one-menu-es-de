<!-- 
3:2 aspect ratio
based on 1620x1080
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <text name="user-name">
         <pos>0.03703704 0.05555556</pos><!-- 60 60 -->
      </text>
      <clock name="clock">
         <pos>0.5 0.05555556</pos><!-- 50% 60 -->
      </clock>
      <systemstatus name="system-status">
         <pos>0.96296296 0.05555556</pos><!-- 1560 60 -->
      </systemstatus>
      <text name="view-name">
         <pos>0.03703704 0.94444444</pos><!-- 60 1020 -->
      </text>
      <helpsystem name="help-system-view,help-gamelist-view">
         <pos>${helpsystemPos}</pos>
         <iconTextSpacing>${helpSystemIconTextSpacing}</iconTextSpacing>
         <entrySpacing>${helpSystemEntrySpacing}</entrySpacing>
      </helpsystem>
   </view>
   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <helpsystem name="help-system-view">
         <entries>${helpSystemViewEntries}</entries>
      </helpsystem>
      <helpsystem name="help-gamelist-view">
         <scope>none</scope>
      </helpsystem>
      <textlist name="system-textlist">
         <pos>0.5 0.5</pos>
         <selectedBackgroundMargins>${selectedBackgroundMargins}</selectedBackgroundMargins>
         <size>0.74074074 0.65</size><!-- 1200 702 -->
      </textlist>
   </view>
   <!--
   ///
   Gamelist View
   ///
   -->
   <view name="gamelist">
      <helpsystem name="help-system-view">
         <scope>none</scope>
      </helpsystem>
      <helpsystem name="help-gamelist-view">
         <entries>${helpGamelistViewEntries}</entries>
      </helpsystem>
      <textlist name="gamelist-textlist">
         <selectedBackgroundMargins>${selectedBackgroundMargins}</selectedBackgroundMargins>
      </textlist>
   </view>
   <variant name="gamelist-list-basic">
      <view name="gamelist">
         <textlist name="gamelist-textlist">
            <pos>0.5 0.5</pos><!-- 50% 50% -->
            <size>0.74074074 0.65</size><!-- 1200 702 -->
         </textlist>
      </view>
   </variant>
   <variant name="gamelist-list-cover,gamelist-list-screenshot,gamelist-list-titlescreen,gamelist-list-physicalmedia,gamelist-list-miximage">
      <view name="gamelist">
         <textlist name="gamelist-textlist">
            <pos>0.11111111 0.5</pos><!-- 180 50% -->
            <size>0.33950617 0.65</size><!-- 550 702 -->
         </textlist>
         <video name="game-artwork">
            <pos>0.88888889 0.5</pos><!-- 1440 50% -->
            <maxSize>0.33950617 0.65</maxSize><!-- 550 702 -->
         </video>
      </view>
   </variant>
   <variant name="gamelist-carousel-cover">
      <view name="gamelist">
         <text name="game-name">
            <pos>0.08024691 0.27037037</pos><!-- 130 292 -->
            <size>0.83950617 0.06481481</size><!-- 1360 70 -->
         </text>
         <carousel name="gamelist-carousel">
            <verticalOffset>0.32222222</verticalOffset><!-- 348 -->
            <!-- Carousel sizing handled in _inc/systems/coversize -->
         </carousel>
         <video name="game-video">
            <origin>0 0</origin>
            <imageType>none</imageType>
            <delay>2</delay>
            <fadeInType>black</fadeInType>
            <videoCornerRadius>0.0025</videoCornerRadius>
            <iterationCount>1</iterationCount>
            <onIterationsDone>none</onIterationsDone>
            <zIndex>15</zIndex>
         </video>
         <image name="carousel-selector">
            <origin>0 0</origin>
            <color>${selectorColor}</color>
            <cornerRadius>0.0025</cornerRadius>
            <metadataElement>true</metadataElement>
            <zIndex>20</zIndex>
         </image>
      </view>
   </variant>
   <!--
   ///
   Font Sizes
   ///
   -->
   <fontSize name="small">
      <variables>
         <selectedBackgroundMargins>0.01728395 0.01728395</selectedBackgroundMargins><!-- 28 -->
         <helpSystemViewEntries>start,a</helpSystemViewEntries>
         <helpGamelistViewEntries>back,a,b</helpGamelistViewEntries>
         <helpsystemPos>0.96296296 0.95185185</helpsystemPos><!-- 1560 1028 -->
         <helpSystemIconTextSpacing>0.00493827</helpSystemIconTextSpacing><!-- 8 -->
         <helpSystemEntrySpacing>0.01481481</helpSystemEntrySpacing><!-- 24 -->
      </variables>
   </fontSize>
   <fontSize name="medium">
      <variables>
         <selectedBackgroundMargins>0.02222222 0.02222222</selectedBackgroundMargins><!-- 36 -->
         <helpSystemViewEntries>start,a</helpSystemViewEntries>
         <helpGamelistViewEntries>back,a,b</helpGamelistViewEntries>
         <helpsystemPos>0.96296296 0.95185185</helpsystemPos><!-- 1560 1028 -->
         <helpSystemIconTextSpacing>0.00493827</helpSystemIconTextSpacing><!-- 8 -->
         <helpSystemEntrySpacing>0.01481481</helpSystemEntrySpacing><!-- 24 -->
      </variables>
   </fontSize>
   <fontSize name="large">
      <variables>
         <selectedBackgroundMargins>0.02222222 0.02222222</selectedBackgroundMargins><!-- 36 -->
         <helpSystemViewEntries>start,a</helpSystemViewEntries>
         <helpGamelistViewEntries>a,b</helpGamelistViewEntries>
         <helpsystemPos>0.96296296 0.94444444</helpsystemPos><!-- 1560 1020 -->
         <helpSystemIconTextSpacing>0.00740741</helpSystemIconTextSpacing><!-- 12 -->
         <helpSystemEntrySpacing>0.01728395</helpSystemEntrySpacing><!-- 28 -->
      </variables>
   </fontSize>
   <fontSize name="x-large">
      <variables>
         <selectedBackgroundMargins>0.02592593 0.02592593</selectedBackgroundMargins><!-- 42 -->
         <helpSystemViewEntries>start,a</helpSystemViewEntries>
         <helpGamelistViewEntries>a,b</helpGamelistViewEntries>
         <helpsystemPos>0.96296296 0.94444444</helpsystemPos><!-- 1560 1020 -->
         <helpSystemIconTextSpacing>0.00740741</helpSystemIconTextSpacing><!-- 12 -->
         <helpSystemEntrySpacing>0.01728395</helpSystemEntrySpacing><!-- 28 -->
      </variables>
   </fontSize>

</theme>