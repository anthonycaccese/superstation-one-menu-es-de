<!-- 
4:3 aspect ratio
based on 1440x1080
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <text name="user-name">
         <pos>0.04166667 0.05555556</pos><!-- 60 60 -->
      </text>
      <clock name="clock">
         <pos>0.5 0.05555556</pos><!-- 50% 60 -->
      </clock>
      <systemstatus name="system-status">
         <pos>0.95833333 0.05555556</pos><!-- 1380 60 -->
      </systemstatus>
      <text name="view-name">
         <pos>0.04166667 0.94444444</pos><!-- 60 1020 -->
      </text>
      <helpsystem name="help-system-view,help-gamelist-view">
         <pos>${helpsystemPos}</pos>
         <iconTextSpacing>${helpSystemIconTextSpacing}</iconTextSpacing>
         <entrySpacing>${helpSystemEntrySpacing}</entrySpacing>
      </helpsystem>
   </view>
   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <helpsystem name="help-system-view">
         <entries>${helpSystemViewEntries}</entries>
      </helpsystem>
      <helpsystem name="help-gamelist-view">
         <scope>none</scope>
      </helpsystem>
      <textlist name="system-textlist">
         <pos>0.5 0.5</pos>
         <selectedBackgroundMargins>${selectedBackgroundMargins}</selectedBackgroundMargins>
         <size>0.69444444 0.65</size><!-- 1000 702 -->
      </textlist>
   </view>
   <!--
   ///
   Gamelist View
   ///
   -->
   <view name="gamelist">
      <helpsystem name="help-system-view">
         <scope>none</scope>
      </helpsystem>
      <helpsystem name="help-gamelist-view">
         <entries>${helpGamelistViewEntries}</entries>
      </helpsystem>
      <textlist name="gamelist-textlist">
         <selectedBackgroundMargins>${selectedBackgroundMargins}</selectedBackgroundMargins>
      </textlist>
   </view>
   <variant name="gamelist-list-basic">
      <view name="gamelist">
         <textlist name="gamelist-textlist">
            <pos>0.5 0.5</pos><!-- 50% 50% -->
            <size>0.69444444 0.65</size><!-- 1000 702 -->
         </textlist>
      </view>
   </variant>
   <variant name="gamelist-list-cover,gamelist-list-screenshot,gamelist-list-titlescreen,gamelist-list-physicalmedia,gamelist-list-miximage">
      <view name="gamelist">
         <textlist name="gamelist-textlist">
            <pos>0.09722222 0.5</pos><!-- 140 50% -->
            <size>0.36111111 0.65</size><!-- 520 702 -->
         </textlist>
         <video name="game-artwork">
            <pos>0.90277778 0.5</pos><!-- 1300 50% -->
            <maxSize>0.36111111 0.65</maxSize><!-- 520 702 -->
         </video>
      </view>
   </variant>
   <variant name="gamelist-carousel-cover">
      <view name="gamelist">
         <text name="game-name">
            <pos>0.13194444 0.27037037</pos><!-- 190 292 -->
            <size>0.73611111 0.06481481</size><!-- 1060 70 -->
         </text>
         <carousel name="gamelist-carousel">
            <verticalOffset>0.32222222</verticalOffset><!-- 348 -->
            <!-- Carousel sizing handled in _inc/systems/coversize -->
         </carousel>
      </view>
   </variant>
   <!--
   ///
   Font Sizes
   ///
   -->
   <fontSize name="small">
      <variables>
         <selectedBackgroundMargins>0.01944444 0.01944444</selectedBackgroundMargins><!-- 28 -->
         <helpSystemViewEntries>start,a</helpSystemViewEntries>
         <helpGamelistViewEntries>back,a,b</helpGamelistViewEntries>
         <helpsystemPos>0.95833333 0.95185185</helpsystemPos><!-- 1380 1028 -->
         <helpSystemIconTextSpacing>0.00555556</helpSystemIconTextSpacing><!-- 8 -->
         <helpSystemEntrySpacing>0.01666667</helpSystemEntrySpacing><!-- 24 -->
      </variables>
   </fontSize>
   <fontSize name="medium">
      <variables>
         <selectedBackgroundMargins>0.025 0.025</selectedBackgroundMargins><!-- 36 -->
         <helpSystemViewEntries>start,a</helpSystemViewEntries>
         <helpGamelistViewEntries>back,a,b</helpGamelistViewEntries>
         <helpsystemPos>0.95833333 0.95185185</helpsystemPos><!-- 1380 1028 -->
         <helpSystemIconTextSpacing>0.00555556</helpSystemIconTextSpacing><!-- 8 -->
         <helpSystemEntrySpacing>0.01666667</helpSystemEntrySpacing><!-- 24 -->
      </variables>
   </fontSize>
   <fontSize name="large">
      <variables>
         <selectedBackgroundMargins>0.025 0.025</selectedBackgroundMargins><!-- 36 -->
         <helpSystemViewEntries>start,a</helpSystemViewEntries>
         <helpGamelistViewEntries>a,b</helpGamelistViewEntries>
         <helpsystemPos>0.95833333 0.94444444</helpsystemPos><!-- 1380 1020 -->
         <helpSystemIconTextSpacing>0.00833333</helpSystemIconTextSpacing><!-- 12 -->
         <helpSystemEntrySpacing>0.01944444</helpSystemEntrySpacing><!-- 28 -->
      </variables>
   </fontSize>
   <fontSize name="x-large">
      <variables>
         <selectedBackgroundMargins>0.02916667 0.02916667</selectedBackgroundMargins><!-- 42 -->
         <helpSystemViewEntries>start,a</helpSystemViewEntries>
         <helpGamelistViewEntries>a,b</helpGamelistViewEntries>
         <helpsystemPos>0.95833333 0.94444444</helpsystemPos><!-- 1380 1020 -->
         <helpSystemIconTextSpacing>0.00833333</helpSystemIconTextSpacing><!-- 12 -->
         <helpSystemEntrySpacing>0.01944444</helpSystemEntrySpacing><!-- 28 -->
      </variables>
   </fontSize>

</theme>