<theme>
   <colorScheme name="custom">
      <variables>
         <!-- Background -->
         <backgroundPath>${defaultBackground}</backgroundPath>
         <backgroundTile>true</backgroundTile>
         <backgroundColor>000000</backgroundColor>
         <!-- Fonts -->
         <fontPath>${defaultFont}</fontPath>
         <fontColorBase>ffffff</fontColorBase>
         <fontColorSelected>000000</fontColorSelected>
         <!-- Icons -->
         <iconColorBase>ffffff</iconColorBase>
         <!-- Accents -->
         <selectorColor>ffffff</selectorColor>
         <indicators>ascii</indicators>
         <!-- User -->
         <userName>${defaultUserName}</userName>
      </variables>
   </colorScheme>
</theme>